<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesMAUI.Views.CategoriesPage"
             Title="CategoriesPage">
    <VerticalStackLayout Margin="16,0">
        <ListView ItemsSource="{Binding Source={StaticResource viewModel}, Path=Categories}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}"></Label>
                            <ProgressBar Progress="{Binding ExpensesPercentage}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Category" Command="{Binding Source={StaticResource viewModel}, Path=AddCommand}"/>
    </VerticalStackLayout>
</ContentPage>