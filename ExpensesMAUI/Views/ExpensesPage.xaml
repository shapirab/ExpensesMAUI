<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesMAUI.Views.ExpensesPage"
             Title="ExpensesPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="add.png" 
                 Command="{Binding Source={StaticResource viewModel}, Path=AddExpenseCommand}"/>
        <ToolbarItem IconImageSource="category.png" 
         Command="{Binding Source={StaticResource viewModel}, Path=BackCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Source={StaticResource viewModel}, Path=Expenses}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Category}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>