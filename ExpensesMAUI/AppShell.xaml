<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpensesMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpensesMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ExpensesMAUI">

    <TabBar>
        <ShellContent
            Title="Categories"
            ContentTemplate="{DataTemplate local:CategoriesPage}"
            Route="CategoriesPage" />
        <ShellContent
            Title="Expenses"
            ContentTemplate="{DataTemplate local:ExpensesPage}"
            Route="ExpensesPage" />
    </TabBar>
</Shell>
